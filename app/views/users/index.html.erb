<% provide(:title, 'All users') %>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <% if current_user.admin == true%>
          <td><%= button_to 'Destroy', user_path(user), method: :delete %></td>
      <% end %>
    </tr>
    <br>
<% end %>
