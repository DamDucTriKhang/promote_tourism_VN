<div class="show">
  <p>
    <strong>name:</strong>
    <%= @user.name %>
    <strong>email:</strong>
    <%= @user.email %>
  </p>
	<div class="col-md-8">
	<% if @user.microposts.any? %>
		<h3>Microposts (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>
	<% end %>
	<%= paginate @microposts %>
	</div>
</div>
