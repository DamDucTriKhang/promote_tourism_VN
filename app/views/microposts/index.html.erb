<% provide(:title, 'All microposts') %>
  <% @microposts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_micropost_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    </br>
<% end %>
